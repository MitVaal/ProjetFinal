{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container-fluid vueForm">
        <div class="container vueForm d-flex flex-column justify-content-center align-items-center ">
            <i class="far fa-thumbs-up fa-4x iconPlane"></i>
            <p class="contentCheckemail borderForm">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
            {% if targetUrl %}
                <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
            {% endif %}
        </div>
    </div>
{% endblock fos_user_content %}
