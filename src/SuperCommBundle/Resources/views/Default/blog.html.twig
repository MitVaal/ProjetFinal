{% extends '@SuperComm/Default/base.html.twig' %}

    {% block title %}<title>Vos Ressources</title>{% endblock %}


{% block content %}

    <div class="container-fluid bandeauBlog p-5">

        <div class="container d-flex flex-row align-items-center justify-content-center">
            <div class="row">
                <h2 class="titleBlog col-lg-12">La boîte à outils<span style="font-size: x-small">©</span></h2><br>
                <p class="subTitleBlog">Proposée par SuperComm</p>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container d-flex flex-column align-items-center justify-content-center">

            <div class="row">

                <div class="col-lg-9 p-3">
                    <div class="row bigBox">

                        {% for article in articles |reverse %}

                            <div class="col-lg-5 box"><img class="boxImg" src="{{ article.image }}"></div>
                            <div class="col-lg-7 box">
                                <a class="readMore" href="{{ path('super_comm_ressource_detail', { 'id' : article.id }) }}" ><span class="titleArticleBlog">{{ article.title }}</span></a><br>
                                <span class="spanArticle">Par {{ article.author }} | le {{ article.dateOnPublished.date |date ('d/m/Y') }}</span><br>
                                <div>{{ article.content |slice (0, 540) |raw }}... <a class="readMore" href="{{ path('super_comm_ressource_detail', { 'id' : article.id }) }}" >Lire la suite</a></div>
                            </div>

                        {% endfor %}

                    </div>

                    <div class="pagination">
                        <span class="current">1</span>
                        <a href="#" class="inactive">2</a>
                        <a href="#" class="inactive">
                            <span class="arrows">›</span>
                        </a>
                        <a href="#" class="inactive">
                            <span class="arrows">»</span>
                        </a>
                    </div>

                </div>

                <div class="col-lg-3 pl-5 pt-3">
                    <div class="row sideBar">
                        <div class="input-group md-form form-sm form-2 pl-0">
                            <input class="form-control my-0 py-1 red-border" type="text" placeholder="Rechercher..." aria-label="Search">
                            <div class="input-group-append">
                                <span class="input-group-text red lighten-3" id="basic-text1"><i class="fa fa-search text-grey" aria-hidden="true"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row sideBar">
                        <div class="col-lg-12"><p class="titleSidebar">RESEAUX SOCIAUX</p></div>
                        <div class="col-lg-4"><a class="linksBlog" href="#"><i class="fab fa-twitter fa-2x"></i></a></div>
                        <div class="col-lg-4"><a class="linksBlog" href="#"><i class="fab fa-facebook-f fa-2x"></i></a></div>
                        <div class="col-lg-4"><a class="linksBlog" href="#"><i class="fab fa-linkedin-in fa-2x"></i></a></div>
                    </div>

                    <div class="row sideBar">
                        <div class="col-lg-12"><p class="titleSidebar">BLOGS A SUIVRE</p></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/logoBDM.png') }}" alt="Logo Blog du Modérateur"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://www.blogdumoderateur.com/" target="_blank">Blog du Modérateur</a></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/logo1min30.png') }}" alt="Logo Blog de l'agence 1min30"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://www.1min30.com/le-blog" target="_blank">Agence 1min30</a></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/logoWMCo.png') }}" alt="Logo Blog Webmarketing&Co'm"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://www.webmarketing-com.com/" target="_blank">Webmarketing&Co'm</a></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/LogoAbondance.png') }}" alt="Logo Blog Abondance"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://www.abondance.com/" target="_blank">Abondance</a></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/LogoDescary.png') }}" alt="Logo Blog Descary.com"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://descary.com/" target="_blank">Descary.com</a></div>
                        <div class="col-lg-4"><img class="imgBlogSidebar" src="{{ asset('assets/images/logoEcrirePourLeWeb.png') }}" alt="Logo Blog Ecrire pour le Web"></div>
                        <div class="col-lg-8 p-2"><a class="linksBlog" href="https://www.ecrirepourleweb.com/" target="_blank">Ecrire pour le Web</a></div>
                    </div>

                    <div class="row sideBar">
                        <div class="col-lg-12"><p class="titleSidebar">OUTILS SEO</p></div>
                        <ul>
                            <li class="col-lg-12"><a class="linksBlog" href="https://alyze.info" target="_blank">alyze.info</a></li>
                            <li class="col-lg-12"><a class="linksBlog" href="https://answerthepublic.com" target="_blank">answerthepublic.com</a></li>
                            <li class="col-lg-12"><a class="linksBlog" href="https://www.outils-atypicom.fr" target="_blank">outils-atypicom.fr</a></li>
