<?xml version="1.0" encoding="utf-8"?>
<!-- src/AppBundle/Resources/config/doctrine/User.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="SuperCommBundle\Entity\User" table="fos_user"> <!-- Target the FOSUser table -->
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <!-- I add fields to the FOSUser table -->
        <field name="lastname" type="string" column="lastname"/>
        <field name="firstname" type="string" column="firstname"/>
        <field name="status" type="string" column="status"/>

        <!-- I indicate to Doctrine what are the relations between the Fos_user table and the Article and Product tables -->
        <one-to-many
                field="article"
                target-entity="SuperCommBundle\Entity\Article"
                mapped-by="user">
        </one-to-many>
        <one-to-many
                field="product"
                target-entity="SuperCommBundle\Entity\Product"
                mapped-by="user">
        </one-to-many>
    </entity>
</doctrine-mapping>